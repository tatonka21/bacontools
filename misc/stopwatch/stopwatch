#!/bin/bash
# Usage: stopwatch
# Print an ascending time counter.

INIT_DATE="$(date +%s)"
LAP_DATE="$INIT_DATE"
LAP_COUNT="1"

print_lap() {
	TOTAL_TIME="$(date -u --date @$(( $(date +%s) - INIT_DATE )) +%H:%M:%S)"
	LAP_TIME="$(date -u --date @$(( $(date +%s) - LAP_DATE )) +%H:%M:%S)"
	tput cuu 1
	tput el
	printf "%03d  %-9s %-9s\n" "$LAP_COUNT" "$LAP_TIME" "$TOTAL_TIME"
}

int_trap() {
	echo
	echo "Laps  Total time"
	echo "----------------"
	printf "%03d   %-9s\n" "$LAP_COUNT" "$TOTAL_TIME"
	exit 0
}

if [ "$#" -gt 0 ]; then
	echo "warning: stopwatch does not take any arguments" 1>&2
	echo "use Enter to mark a lap, and Ctrl-C to stop the script" 1>&2
	echo 1>&2
fi

trap int_trap INT

echo "Lap  Lap time  Total time"
echo "-------------------------"
echo

while true ; do
	print_lap
	read -r -s -n1 -t1 KEY || KEY="EMPTY"

	if [[ "$KEY" = "" ]]; then
		echo
		LAP_COUNT="$(( LAP_COUNT + 1 ))"
		LAP_DATE="$(date +%s)"
	fi
done
